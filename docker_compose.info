version: '3.4'
services:
  mariadb:
    image: mariadb:latest
    environment:
      MYSQL_ROOT_PASSWORD: test
      MYSQL_DATABASE: test
      MYSQL_USER: sql
      MYSQL_PASSWORD: test
    logging:
      driver: syslog
      options:
        tag: "{{.DaemonName}}(image={{.ImageName}};name={{.Name}};id={{.ID}})"
    ports:
      - '3306:3306'
    restart: on-failure
    volumes:
     - ${PWD}/mariadb:/var/lib/mysql


